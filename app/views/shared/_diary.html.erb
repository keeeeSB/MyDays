<div class="card mb-5">
  <div class="card-header text-center">
    <h4 class="cared-title"><%= diary.title %></h4>
    <p class="card-subtitle text-muted">
      日付： <%= formatted_date(diary) %>
    </p>
  </div>
  <div class="card-body text-center">
    <p class="card-text"><%= diary.content %></p>
    <% if diary.tags.present? %>
      <h5 class="mt-3">
        <% diary.tags.each do |tag| %>
          <span class="badge bg-success">
            <%= link_to tag.name, "#", class: "text-white text-decoration-none" %>
          </span>
        <% end %>
      </h5>
    <% end %>
    <div class="text-end">
      <%= link_to "編集", edit_user_diary_path(current_user, diary), class: "btn btn-warning btn-sm me-2" %>
      <%= link_to "削除", user_diary_path(current_user, diary), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                                                              class: "btn btn-danger btn-sm" %>
    </div>
  </div>
</div>
