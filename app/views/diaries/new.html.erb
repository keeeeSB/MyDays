<h2 class="text-center mb-3">今日の日記</h2>

<%= form_with(model: @diary, url: user_diaries_path(current_user), local: true) do |f| %>
  <%= render "shared/error_messages", object: @diary %>

  <div class="mb-3">
    <%= f.label :title, "タイトル", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, "内容", class: "form-label" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="mb-4">
    <%= f.label :tags, "タグ付け（スペース区切りで入力）", class: "form-label" %>
    <%= f.text_field :tag_list, class: "form-control" %>
  </div>

  <div class="text-center mb-3">
    <%= f.submit "投稿", class: "btn btn-outline-secondary" %>
  </div>
<% end %>
